---
title: Blog
layout: layout.njk
pagination:
  data: collections.posts
  size: 100
  alias: posts
---

<ul class="space-y-6">
  {% for post in posts %}
    <li class="border border-neutral-700 rounded-lg p-6 hover:bg-neutral-800 transition cursor-pointer">
      <a href="{{ post.url | url }}" class="block no-underline">
        <h2 class="text-xl font-semibold text-blue-400 hover:text-blue-300 mb-1">
          {{ post.data.title }}
        </h2>
        <p class="text-md text-neutral-400 mb-2 block">
          {{ post.data.author }}
        </p>
        <time datetime="{{ post.date.toISOString() }}" class="text-sm text-neutral-400 mb-2 block">
          {{ post.date | date("MMMM d, yyyy") }}
        </time>
        <p class="text-neutral-300 line-clamp-3">
          {{ post.templateContent | striptags | truncate(150, true, '...') }}
        </p>
      </a>
    </li>
  {% endfor %}
</ul>
